#!/usr/bin/env python
# -*- coding: utf-8 -*-


import argparse
import dcm2bids
import dcm2bids.dcm2bids_utils as utils
import os


def get_arguments():
    parser = argparse.ArgumentParser()

    parser.add_argument(
            "-o",
            "--output",
            required = True,
            help = "Directory of your BIDS output",
            )

    parser.add_argument(
            "-j",
            "--jsonfile",
            required = True,
            help = "Participant description, JSON format",
            )

    args = parser.parse_args()
    return args


def main():
    """Let's go"""
    args = get_arguments()

    bidsDir = os.path.abspath(args.output)
    dicomsDir = os.path.abspath(os.path.dirname(args.jsonfile))
    description = utils.loadJsonFile(args.jsonfile)
    if not description.has_key('session'):
        description['session'] = 'n/a'

    app = dcm2bids.App(bidsDir, dicomsDir, description)
    app.run()


if __name__ == '__main__':
    main()
