#!/usr/bin/env python
# -*- coding: utf-8 -*-


import argparse
import dcm2bids


def get_arguments():
    parser = argparse.ArgumentParser()

    parser.add_argument(
            "-o",
            "--output",
            required = True,
            help = "Directory of your BIDS output",
            )

    parser.add_argument(
            "-j",
            "--jsonfile",
            required = True,
            help = "Participant description, JSON format",
            )

    args = parser.parse_args()
    return args


def main():
    """Let's go"""
    args = get_arguments()
    app = dcm2bids.App(args.output, args.jsonfile)
    app.run()


if __name__ == '__main__':
    main()
